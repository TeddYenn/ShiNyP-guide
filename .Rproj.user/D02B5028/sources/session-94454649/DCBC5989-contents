################################################
##### Step 1: Pre-install Required Package #####
################################################

install.packages("BiocManager")
BiocManager::install(version = "3.19")
BiocManager::install(c("qvalue", "SNPRelate", "ggtree"), force = TRUE)

##########################################################
##### Step 2: Install the ShiNyP Package from GitHub #####
##########################################################

install.packages("remotes")
remotes::install_github("TeddYenn/ShiNyP_Test", force = TRUE)


#############################################
##### Step 3: Start the ShiNyP Platform #####
#############################################

library(ShiNyP)
ShiNyP::run_ShiNyP()




#############################################

# Remove package
# detach("package:ShiNyP", unload = TRUE)
# remove.packages("ShiNyP")

#############################################
remotes::install_github("irudnyts/openai", ref = "r6", force = TRUE)
library(openai)

run_ShiNyP()


install.packages("remotes")

remotes::install_github("TeddYenn/ShiNyP_Test", force = TRUE)

devtools::install_github("TeddYenn/ShiNyP_Test", force = TRUE)
